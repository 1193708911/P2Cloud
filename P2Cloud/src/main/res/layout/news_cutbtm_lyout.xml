<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_layout"
            android:layout_width="wrap_content"
            android:background="@drawable/rec_redshap"
            android:layout_height="wrap_content"
            android:padding="@dimen/size1dp">

            <ImageView
                android:id="@+id/iv_cut"
                android:layout_width="@dimen/size80dp"
                android:layout_height="45dp"
                android:src="@mipmap/cut_bac" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size12sp" />
    </LinearLayout>
</LinearLayout>
