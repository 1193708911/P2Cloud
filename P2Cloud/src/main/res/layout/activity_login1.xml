<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bac1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/size30dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_logle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="四川新闻生产系统"
            android:textColor="#FFCC00"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:background="#370907">

        <LinearLayout
            style="@style/StyleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20dp"
                android:layout_marginRight="@dimen/size20dp"
                android:layout_marginTop="@dimen/size5dp"
                android:layout_weight="1"
                android:background="@drawable/login_msg_drawable"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size30dp"
                    android:layout_height="@dimen/size30dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:src="@mipmap/ic_channel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/txtPingTai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size5dp"
                    android:paddingRight="@dimen/size5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20dp"
                android:layout_marginRight="@dimen/size20dp"
                android:layout_marginTop="@dimen/size5dp"
                android:layout_weight="1"
                android:background="@drawable/login_msg_drawable"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size30dp"
                    android:layout_height="@dimen/size30dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:src="@mipmap/user" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:background="@android:color/black" />

                <EditText
                    android:id="@+id/et_userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size5dp"
                    android:paddingRight="@dimen/size5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20dp"
                android:layout_marginRight="@dimen/size20dp"
                android:layout_marginTop="@dimen/size5dp"
                android:layout_weight="1"
                android:background="@drawable/login_msg_drawable"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size30dp"
                    android:layout_height="@dimen/size30dp"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:src="@mipmap/pass" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginTop="@dimen/size5dp"
                    android:background="@android:color/black" />

                <EditText
                    android:id="@+id/et_passWord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size10dp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/size5dp"
                    android:paddingRight="@dimen/size5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <CheckBox
                    android:id="@+id/cb_remember"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/size30dp"
                    android:layout_marginTop="@dimen/size10dp"
                    android:checked="false"
                    android:gravity="center"
                    android:text="记住密码" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/size20dp"
                    android:layout_marginTop="@dimen/size10dp"
                    android:background="@drawable/round_btn_red"
                    android:text="@string/login"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size30dp"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:gravity="center_horizontal"
        android:text="@string/btm_msg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size14sp"
        android:visibility="gone" />
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/img_ctvit"/>
</RelativeLayout>
