<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_caleandar"
    android:orientation="vertical">
    <!--  android:background="@drawable/drawable_cloud_info"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="详细信息"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/size16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/size5dp"
            android:layout_marginTop="@dimen/size5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/size5dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSuCai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="素材名称:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtSuCaiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08763S"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="媒体格式:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtMediaFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="AVC"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用    户ID:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="08763SSSSSS"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时        长:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtTimeLeanth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="00:00:12:13"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始时间:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="00:00:12:13"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帧        率:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtZhen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="501"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="画面比例:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtBiLi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="16:9"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtCreteTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="2016/02/12"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtDeviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="08763S"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备厂商:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtDeviceFactory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="Panasonic"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="所  有  者:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置信息:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />

                <TextView
                    android:id="@+id/txtTakeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/size14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
