<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size40dp"
    android:background="@mipmap/top_bac"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgbac"
        android:layout_width="@dimen/size20dp"
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_height="match_parent"
        android:src="@mipmap/imgbac" />

    <View
        android:layout_width="@dimen/size1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size10dp"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/imgSecondTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size40dp"
        android:layout_marginLeft="@dimen/size10dp"
        android:src="@mipmap/cut_press" />

    <TextView
        android:id="@+id/txtSecondTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size10dp"
        android:gravity="center_vertical"
        android:text="新闻剪辑"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size16sp" />
</LinearLayout>
