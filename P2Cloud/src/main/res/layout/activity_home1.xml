<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/pagertitle" />

    <FrameLayout
        android:id="@+id/contaner"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF6FF"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlCut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageButton
                android:clickable="false"
                android:id="@+id/imgCut"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:background="@null"
                android:src="@mipmap/ic_cut_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPaiShe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageButton
                android:clickable="false"
                android:id="@+id/imbPaiShe"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@mipmap/ic_photo_normal" />



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlZhiBo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageButton
                android:clickable="false"
                android:focusable="true"
                android:id="@+id/imgZhiBo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@mipmap/ic_zhibo_normal" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlWoDe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageButton
                android:clickable="false"
                android:focusable="true"
                android:id="@+id/imgWoDe"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:background="@null"
                android:src="@mipmap/ic_mine_normal" />



        </RelativeLayout>



    </LinearLayout>


</LinearLayout>


