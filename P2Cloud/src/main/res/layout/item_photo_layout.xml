<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrap_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ll_layout"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size5dp"
        android:layout_height="wrap_content">
        <movi.ui.view.photopicker.widgets.SquareImageView
            android:id="@+id/imageview_photo"
            android:scaleType="centerCrop"
            android:paddingBottom="@dimen/size2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_new_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/new_pic"/>
    </RelativeLayout>


    <View
        android:id="@+id/mask"
        android:visibility="gone"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_gravity="top|right"
        android:visibility="gone"
        android:layout_marginTop="5.5dp"
        android:layout_marginRight="5.5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_select_selector"/>
</FrameLayout>
