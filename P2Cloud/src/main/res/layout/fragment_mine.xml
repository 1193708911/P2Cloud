<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="我的"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size16sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/txtVideoTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size60dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingLeft="@dimen/size8dp"
        android:text="返回"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:src="@mipmap/center_header" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10dp"
                android:gravity="center_horizontal"
                android:text="zjw"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size18sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:src="@mipmap/ic_setting" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size10dp"
            android:text="个人设置"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10dp"
            android:src="@mipmap/ic_reto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/ll_liuliang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"

        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:src="@mipmap/ic_save_liuliang" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="存储及流量查询"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10dp"
            android:src="@mipmap/ic_reto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/size1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:src="@mipmap/ic_about_our" />

        <TextView
            android:id="@+id/ll_about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size10dp"
            android:text="关于我们"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10dp"
            android:src="@mipmap/ic_reto" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_advise"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/size1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:src="@mipmap/ic_fankui" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size10dp"
            android:text="意见反馈"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10dp"
            android:src="@mipmap/ic_reto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/txtExit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_white" />
</LinearLayout>
