<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/size80dp"
        android:layout_height="@dimen/size80dp"
        android:orientation="vertical">

        <com.lling.photopicker.widgets.SquareImageView
            android:id="@+id/imageview_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="@dimen/size15dp"
                android:layout_height="@dimen/size15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/size5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="+"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size5dp"
                android:layout_toEndOf="@+id/btn_add"
                android:layout_toRightOf="@+id/btn_add"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="两会会场服务"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
