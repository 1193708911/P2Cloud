<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="@dimen/size150dp"
            android:layout_height="@dimen/size100dp">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/size10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_load" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/size5dp"
                android:src="@mipmap/new_pic"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/size150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_marginTop="@dimen/size5dp"
                android:text="2016-02-1 17:45:23"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_toRightOf="@+id/ll_pic"
        android:gravity="center_vertical"
        android:orientation="vertical">
        　

        <LinearLayout
            android:id="@+id/llSuCai"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="素材名称:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

            <TextView
                android:id="@+id/txtSucaiName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableRight="@mipmap/img_sucai"
                android:maxLength="8"
                android:maxLines="1"
                android:text="087635"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="媒体格式:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

            <TextView
                android:id="@+id/txtFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avc/1080|so"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时        长:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

            <TextView
                android:id="@+id/txtTimeLeanth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00：00:34"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄设备:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

            <TextView
                android:id="@+id/txtDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aj-px298mc"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所  有  者:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size12sp" />

            <TextView
                android:id="@+id/txtOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="@dimen/size30dp"
        android:layout_height="@dimen/size30dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/size10dp"
        android:src="@mipmap/info"
        android:visibility="gone" />

</RelativeLayout>

